    <script>
        // Initialize Swiper with combined options
        const swiper = new Swiper('.swiper-container', {
            loop: true,              // Enable looping
            spaceBetween: 30,        // Space between slides
            slidesPerView: 1,        // Number of slides visible at once
            autoplay: {
                delay: 2500,         // Autoplay delay in ms
                disableOnInteraction: false, // Keep autoplay even after interaction
            },
            navigation: {
                nextEl: '.swiper-button-next', // Next slide button
                prevEl: '.swiper-button-prev', // Previous slide button
            },
            pagination: {
                el: '.swiper-pagination',   // Pagination element
                clickable: true,             // Allow clicks on pagination bullets
            },
            effect: 'slide',           // Slide transition effect
            speed: 800,                // Transition speed
        });
    
        // Custom Back button functionality (for your own back button)
        const backButtons = document.querySelectorAll('.back-button');
        backButtons.forEach(button => {
            button.addEventListener('click', () => {
                swiper.slidePrev(); // Move to the previous slide
            });
        });
    
        // Custom Next button functionality (for your own next button)
        const nextButtons = document.querySelectorAll('.next-button');
        nextButtons.forEach(button => {
            button.addEventListener('click', () => {
                swiper.slideNext(); // Move to the next slide
            });
        });
    </script>
    
